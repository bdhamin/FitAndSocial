            android:layout_height="wrap_content"
            android:id="@+id/hDivider"
            android:background="@android:color/black"
            android:src="@android:color/black"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentRight="true"/>
</RelativeLayout>