<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:padding="5dip" android:background="@android:color/white">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Swim the Town"
            android:id="@+id/title"
            android:textColor="@color/notification_bar_bg"
            android:textStyle="bold"
            android:layout_alignTop="@+id/linearLayout"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Type:"
            android:id="@+id/type"
            android:textColor="@android:color/black"
            android:layout_below="@id/title"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=""
            android:id="@+id/typeName"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_below="@id/title"/>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="1dip"
            android:id="@+id/linearLayout">

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="140dp"
                android:id="@+id/imageView"
                android:background="@android:color/black"
                android:src="@android:color/black"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="3dip"
            android:id="@+id/horizontal_divider" android:orientation="vertical"
            android:layout_below="@+id/duration" android:layout_alignParentLeft="true">

    </LinearLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Date:"
              android:id="@+id/date"
              android:textColor="@android:color/black"
              android:layout_above="@+id/km"
              android:layout_toRightOf="@+id/linearLayout"
              android:layout_marginLeft="5dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text=""
              android:id="@+id/aDate"
              android:textColor="@android:color/black"
              android:layout_above="@+id/km"
              android:layout_alignRight="@+id/hDivider"
              android:layout_marginRight="5dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Time:"
              android:id="@+id/time"
              android:textColor="@android:color/black"
              android:layout_above="@+id/dTime"
              android:layout_toRightOf="@+id/linearLayout"
              android:layout_marginLeft="5dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text=""
              android:id="@+id/aTime"
              android:textColor="@android:color/black"
              android:layout_above="@+id/dTime"
              android:layout_alignRight="@+id/hDivider"
              android:layout_marginRight="5dp"/>

    <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Participate"
            android:id="@+id/participate"
            android:background="@color/tab_highlight"
            android:textColor="@color/notification_bar_bg"
            android:layout_toRightOf="@+id/time"
            android:layout_marginBottom="10dp"
            android:layout_above="@+id/hDivider"/>


    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Distance:"
              android:id="@+id/distance"
              android:textColor="@android:color/black"
              android:layout_below="@id/type"
              android:layout_marginTop="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text=""
              android:id="@+id/km"
              android:textColor="@android:color/black"
              android:layout_marginTop="10dp"
              android:layout_marginRight="10dp"
              android:layout_toLeftOf="@+id/linearLayout"
              android:layout_below="@id/typeName"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Duration:"
              android:id="@+id/duration"
              android:textColor="@android:color/black"
              android:layout_below="@id/distance"
              android:layout_marginTop="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text=""
              android:id="@+id/dTime"
              android:textColor="@android:color/black"
              android:layout_marginTop="10dp"
              android:layout_marginRight="10dp"
              android:layout_toLeftOf="@+id/linearLayout"
              android:layout_below="@id/km"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text="Participants:"
              android:id="@+id/participants"
              android:textColor="@android:color/black"
              android:layout_below="@id/duration"
              android:layout_marginTop="10dp"/>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall"
              android:text=""
              android:id="@+id/participants_total"
              android:textColor="@android:color/black"
              android:layout_marginTop="10dp"
              android:layout_marginRight="10dp"
              android:layout_toLeftOf="@+id/linearLayout"
              android:layout_below="@id/dTime"/>

