<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="notification_bar"
           parent="Theme.Sherlock">
        <item name="actionBarStyle">@style/custom_notification_bar</item>
        <item name="android:actionBarStyle">@style/custom_notification_bar</item>
        <item name="actionBarTabStyle">@style/custom_barTab_style</item>
        <item name="android:actionBarTabStyle">@style/custom_barTab_style</item>
        <item name="actionBarTabTextStyle">@style/custom_barType_text_style</item>
        <item name="android:actionBarTabTextStyle">@style/custom_barType_text_style</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="custom_notification_bar" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">@color/notification_bar_bg</item>
    </style>

    <style name="custom_barTab_style">
        <item name="android:background">@drawable/tab_bar_background_state_list</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="custom_barType_text_style" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="SpinnerItem.DropDownItem" parent="@android:style/Widget.DropDownItem.Spinner">
        <item name="android:textColor">#000</item>
        <item name="android:background">@android:color/white</item>
    </style>


</resources>
